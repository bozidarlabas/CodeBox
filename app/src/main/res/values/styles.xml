<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primarycolor</item>
        <item name="colorPrimaryDark">@color/primarycolordark</item>
        <item name="colorAccent">@color/accentcolor</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>

    <style name="SpringboardTableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="SpringboardItemLayout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">25.0dip</item>
        <item name="android:paddingBottom">25.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="logoLayout">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="SpringboardItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="SpringboardItemText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">@dimen/ts_30</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/dip_10</item>
        <item name="android:paddingTop">@dimen/dip_18</item>
        <item name="android:paddingRight">@dimen/dip_10</item>
        <item name="android:paddingBottom">@dimen/dip_20</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dip_50</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/ts_22</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/et_master</item>
        <item name="android:padding">@dimen/dip_10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/ts_22</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">@dimen/dip_10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>




</resources>
